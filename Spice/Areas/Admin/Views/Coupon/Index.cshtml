@model IEnumerable<Coupon>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="border backgroundWhite">
    <div class="row">
        <div class="col-6">
            <h2 class="text-info">
               Coupon
            </h2>
        </div>
        <div class="col-6 text-right">
            <partial name="_PartialButton" />
        </div>
    </div>
    <br />
    <div>
        @if (Model.Count() > 0)
        {
            <table class="table table-striped border">
                <tr>
                    <th>
                        @Html.DisplayNameFor(m => m.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(m => m.Discount)
                    </th>
                    <th>
                        @Html.DisplayNameFor(m => m.MinmumAmount)
                    </th>
                    <th>
                        @Html.DisplayNameFor(m => m.isActive)
                    </th>
                    <th></th>
                    <th></th>
                </tr>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(m => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(m => item.Discount)
                        </td>
                        <td>
                            @Html.DisplayFor(m => item.MinmumAmount)
                        </td>
                        <td>
                            @Html.DisplayFor(m => item.isActive)
                        </td>
                        <td>
                            <partial name="_TableBtn" model="item.Id" />
                        </td>
                    </tr>
                }
            </table>
        }
        else
        {
            <p class="text-danger">No Data yet....</p>
        }

    </div>
</div>


