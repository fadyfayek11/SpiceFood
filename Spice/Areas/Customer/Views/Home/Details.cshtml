@model Spice.Models.ShoppingCart
@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<h2 class="text-info">Item Details</h2>
<br />

<form method="post" asp-action="Details">
    
    <div class="border backgroundWhite row">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="col-md-8">
            <div class="form-group row">
                <div class="col-md-4">
                    <label asp-for="MenuItem.Name" class="text-info font-weight-bold"></label>
                </div>
                <div class="col-md-8">
                    <input readonly asp-for="MenuItem.Name" class="form-control" />
                </div>
                <span asp-validation-for="MenuItem.Name" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-md-4">
                    <label asp-for="MenuItem.Description" class="text-info font-weight-bold"></label>
                </div>
                <div class="col-md-8">
                    <div class="border p-2" style="border-radius:5px;">
                        @Html.Raw(Model.MenuItem.Description)
                    </div>                  
                </div>
            </div>
            <div class="form-group row">
                <div class="col-md-4">
                    <label asp-for="MenuItem.Price" class="text-info font-weight-bold"></label>
                </div>
                <div class="col-md-8">
                    <input readonly asp-for="MenuItem.Price" class="form-control" />
                </div>
                <span asp-validation-for="MenuItem.Price" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-md-4">
                    <label asp-for="MenuItem.CategoryId" class="text-info font-weight-bold"></label>
                </div>
                <div class="col-md-8">
                    <input readonly asp-for="MenuItem.Category.Name" class="form-control" />
                </div>
            </div>
            <div class="form-group row">
                <div class="col-md-4">
                    <label asp-for="MenuItem.SubCategoryId" class="text-info font-weight-bold"></label>
                </div>
                <div class="col-md-8">
                    <input readonly asp-for="MenuItem.SubCategory.Name" class="form-control" />
                </div>
            </div>
            <div class="form-group row">
                <div class="col-md-4">
                    <label asp-for="Count" class="text-info font-weight-bold"></label>
                </div>
                <div class="col-md-8">
                    <input  asp-for="Count" class="form-control" />
                </div>
                <span asp-validation-for="Count" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-md-4">
                    <label asp-for="MenuItem.Image" class="text-info font-weight-bold"></label>
                </div>
                <div class="col-md-8">
                    <img src="@Model.MenuItem.Image" width="100%" style="border-radius:15px;border:1px solid #bbb9b9;" />
                </div>
            </div>
            <div class="form-group row">
                <div class="col-md-4">
                    <label asp-for="MenuItem.Spicyness" class="text-info font-weight-bold"></label>
                </div>
                <div class="col-md-8">
                    <select readonly asp-for="MenuItem.Spicyness" class="form-control" asp-items="Html.GetEnumSelectList<MenuItem.ESpicy>()"></select>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-md-4">
                </div>
                <div class="col-md-4">
                    <a asp-action="Index" class="btn btn-success form-control">Back To list</a>
                </div>
                <div class="col-md-4">
                    <button type="submit" value="Add To Cart" class="btn btn-primary form-control">Add To Cart</button>
                </div>
            </div>

        </div>
       
    </div>
    <input hidden asp-for="MenuItemId"/>
</form>
@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}


